[user]
	email = leon.ormes@tessian.com
	name = Leon Ormes
[push]
	default = simple
[core]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
	autocrlf = input
	pager = less -r
[merge]
	tool = meld
[diff]
	algorithm = histogram
	tool = meld
[difftool]
	prompt = false
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = red reverse
	local = blue
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta
	old = red bold
	new = green
	plain = white

[color "status"]
	added = yellow
	changed = red
	untracked = cyan

[alias]
	# basic {{{
	aliases = config --get-regexp alias
	st = status -sb --branch
	cl = clone
	ci = commit
	ap = add -p
	p = pull --rebase
	# Commit all changes
	ca = !git add -p && git commit -av
	co = checkout
	cot = checkout --track
	ppm = !git pull --rebase && git push origin master
	br = branch
	rso = remote show origin
	r = reset
	cp = cherry-pick
	gr = grep -Ii
	recent = !git for-each-ref --sort=-committerdate --format='%(refname:short)' refs/heads/ | head -n 100
	# }}}
	# tweak defaults {{{
	diff = diff --word-diff --unified=10 --diff-algorithm=histogram
	branch = branch -ra
	grep = grep -Ii
	bra = branch -ra
	ai = add --interactive
	# commit {{{
	cm = commit -m
	cma = commit -a -m
	amend = commit --amend
	caa = commit -a --amend -C HEAD
	# }}}
	# log commands {{{
	h = !git log --graph --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	hs = !git h --max-count=10
	fh = !git log --format=format:'%C(bold cyan)%ar %C(reset) %C(green)%f' --name-status
	ls = log --graph --pretty=format:"%C(red)%h\\ %C(yellow)[%ad]%Cgreen%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	fl = log -u
	# }}}
	# diff {{{
	d = diff --word-diff
	dc = diff --cached --word-diff

	# diff last commit
	dlc = diff --cached HEAD^
	so = show --pretty='parent %Cred%p%Creset commit %Cred%h%Creset%C(yellow)%d%Creset%n%n%w(72,2,2)%s%n%n%w(72,0,0)%C(cyan)%an%Creset %Cgreen%ar%Creset'
	# }}}
[rerere]
	enabled = true
